{
  "name": "sketchprompt",
  "publisher": "PascalX",
  "displayName": "SketchPrompt",
  "description": "SketchPrompt is a powerful Cursor IDE extension for visual thinking and AI prompting.",
  "version": "0.2.0",
  "icon": "media/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/pascalx-git/SketchPrompt.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Visualization",
    "Productivity"
  ],
  "keywords": [
    "sketching",
    "drawing",
    "visual",
    "tldraw",
    "diagrams",
    "prompts",
    "ai",
    "collaboration",
    "cursor"
  ],
  "activationEvents": [
    "onCommand:sketchprompt.openCanvas"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sketchprompt.newSketch",
        "title": "SketchPrompt: New Sketch"
      },
      {
        "command": "sketchprompt.help",
        "title": "SketchPrompt: Help"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "sketchprompt.newSketch",
          "group": "navigation",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "sketchprompt.editor",
        "displayName": "SketchPrompt Editor",
        "selector": [
          {
            "filenamePattern": "**/*.sketchprompt"
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "sketchprompt",
        "aliases": [
          "SketchPrompt"
        ],
        "extensions": [
          ".sketchprompt"
        ],
        "configuration": "./sketchprompt-language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build-webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-webview": "vite build",
    "watch-webview": "vite build --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.19.2",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^8.0.0",
    "glob": "^8.0.0",
    "mocha": "^10.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vsce": "^2.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tldraw": "^3.13.4"
  }
}
