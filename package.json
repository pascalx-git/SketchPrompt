{
  "name": "sketchprompt",
  "displayName": "SketchPrompt",
  "description": "Sketching inside Cursor IDE for visual thinking and AI prompting",
  "version": "0.0.1",
  "icon": "media/SketchPrompt-Logo-64px-square.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ptlola/SketchPrompt.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sketchprompt.openCanvas"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sketchprompt.openCanvas",
        "title": "SketchPrompt: Open Canvas"
      },
      {
        "command": "sketchprompt.newSketch",
        "title": "SketchPrompt: New Sketch"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "sketchPromptPanel",
          "title": "SketchPrompt",
          "icon": "media/SketchPrompt-Logo-64px-square.png"
        }
      ]
    },
    "views": {
      "sketchPromptPanel": [
        {
          "id": "sketchPromptView",
          "name": "Canvas",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "sketchprompt.openCanvas",
          "when": "view == sketchPromptView",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "sketchprompt.openCanvas",
          "when": "true"
        }
      ],
      "explorer/context": [
        {
          "command": "sketchprompt.newSketch",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "sketchprompt.editor",
        "displayName": "SketchPrompt Editor",
        "selector": [
          {
            "filenamePattern": "**/*.sketchprompt"
          }
        ]
      }
    ],
    "icons": [
      {
        "id": "sketchprompt-file",
        "description": "SketchPrompt file icon",
        "path": "./media/SketchPrompt-Logo-64px-square.png"
      }
    ],
    "languages": [
      {
        "id": "sketchprompt",
        "aliases": [
          "SketchPrompt"
        ],
        "extensions": [
          ".sketchprompt"
        ],
        "configuration": "./sketchprompt-language-configuration.json",
        "icon": "sketchprompt-file"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build-webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-webview": "vite build",
    "watch-webview": "vite build --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.19.2",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^8.0.0",
    "glob": "^8.0.0",
    "mocha": "^10.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vsce": "^2.0.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tldraw": "^3.13.4"
  }
}
